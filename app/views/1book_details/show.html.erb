<div id="content-header">
  <h1>Book Detail</h1>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="span1"></div>
    <div class="span7 offset1">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-book "></i>
          </span>
          <h5><%= @book_detail.title %></h5>
        </div>
        <%= render :partial => 'book_detail' %>
        <div class="widget-content">
          <div class='span8 offset2' style="margin-top: -24px;">
            <%= link_to 'Edit', edit_book_detail_path(@book_detail), :class => 'btn btn-primary' %>
            <%= link_to 'Buy', buy_book_path(:book_id => @book_detail), :class => 'btn btn-primary' %>
            <%= link_to 'Back', book_details_path , :class => 'btn btn-inverse' %>
          </div>
        </div>
      </div>
    </div>
    <div class="span3"></div>
  </div>
</div>