<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">Title</span>
    </div>
    <div class="span2">
      <%= @book_detail.title %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">Author</span>
    </div>
    <div class="span2">
      <%= @book_detail.author %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">User Name</span>
    </div>
    <div class="span2">
      <%= @book_detail.user.full_name rescue "" %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">ISBN Number</span>
    </div>
    <div class="span2">
      <%= @book_detail.isbn_number %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">Price</span>
    </div>
    <div class="span2">
      <%= @book_detail.price %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">Description</span>
    </div>
    <div class="span2">
      <%= @book_detail.description %>
    </div>
  </div>
</div>
<div class="widget-content">
  <div class="row row-size margin_from_top">
    <div class="span2 offset1" style="text-align:left">
      <span style="font-weight:bold">Image</span>
    </div>
    <div class="span2">
      <%= image_tag(@book_detail.avatar_url) %>
    </div>
  </div>
</div>
