<div class="form">
  <%= simple_form_for(@book_detail) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :author %>
      <%= f.input :isbn_number %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
      
