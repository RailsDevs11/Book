<!-- start: Content -->
<div id="content" class="span10">
  <div class="row-fluid">
    <div class="box span12">
      <div class="box-header">
        <h2><i class="icon-edit"></i>Add your book here</h2>
        <div class="box-icon">
          <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
          <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn-close"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <div id="MyWizard" class="wizard">
          <%= form_tag search_user_book_details_path, :method => 'get', :id => "book_search" do %>
            Post Book By ISBN  <%= text_field_tag :ssearch, params[:search] %>
            <%= submit_tag "Search", :name => nil, :class=>"btn btn-primary", :style => "margin-bottom: 10px;" %>
          <% end %>
        </div>
        <%= simple_form_for(@book_detail, :url => user_book_details_path, 
        :html => { :method => :post, :class=>"form-horizontal", :multipart => true } ) do |f| %>
          <%= render :partial => "form", :locals => { :f => f } %>
        <% end %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>
<!-- end: Content -->