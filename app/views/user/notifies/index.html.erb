<!-- start: Content -->
<div id="content" class="span10" style="min-height: 600px;">
  <div class="row-fluid">   
    <div class="box span12">
      <div class="box-header" data-original-title>
        <h2><i class="icon-tasks"></i><span class="break"></span>Listing notifies</h2>
        <div class="box-icon">
          <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
          <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn-close"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <th>ISBN</th>
              <th>User Name</th>
              <th>End Date</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% unless @notifies.blank? %>
              <% @notifies.each do |notify| %>
                <tr>
                  <td><%= notify.isbn_number %></td>
                  <td><%= notify.user.try(:first_name) %></td>
                  <td class="center"><%= notify.end_date %></td>
                  <td class="center">
                    <a class="btn btn-success" href="<%= user_notify_path(notify) %>">
                      <i class="icon-zoom-in "></i>                                            
                    </a>
                    <a class="btn btn-info" href="<%= edit_user_notify_path(notify) %>">
                      <i class="icon-edit "></i>                                            
                    </a>
                    <%= link_to '<i class="icon-trash "></i>'.html_safe, user_notify_path(notify), method: :delete, 
                      :class=>"btn btn-danger",
                      :confirm => 'Are you sure do you want to delete this notifiy?',
                      "original-title" => "delete your notifiy" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="row_font_color"><h4>There is no notifiy found!</h4></td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>
