<!-- start: Content -->
<div id="content" class="span10" style="min-height: 600px;">
  <div class="row-fluid">   
    <div class="box span12">
      <div class="box-header" data-original-title>
        <h2><i class="icon-tasks"></i><span class="break"></span>Books</h2>
        <div class="box-icon">
        </div>
      </div>
      <div class="row-fluid" style="margin-top: 6px;">
        <div class="span7 offset2">
          <%= form_tag user_dashboard_index_path, :method => 'get', :id => "book_search" do %>
            Search by Author, Title or ISBN number: 
            <%= text_field_tag :search_keyword, params[:search_keyword], :placeholder => "Book Author, ISBN number or Title" %>
            <%= submit_tag "Search", :name => nil, :class=>"btn btn-primary", :style => "margin-bottom: 10px;" %>
          <% end %>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Edition</th>
              <th>Price</th>
              <th>Condition</th>
              <th>Status</th>
            </tr>
          </thead>   
          <tbody>
          <%= render :partial => "book_details",
            :locals =>{:book_details => @book_details} %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>
<style>
#DataTables_Table_0_filter  {
  display: none;
}
</style>
