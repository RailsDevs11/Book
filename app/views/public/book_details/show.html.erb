<div class="container-fluid">
  <div class="row">
    <div class="span1"></div>
    <div class="span11 offset1">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-book "></i>
          </span>
          <h5><%= @book_detail.user.full_name rescue "" %></h5>
        </div>
        <%= render :partial => 'user/book_details/book_detail' %>
        <div class="widget-content">
          <div class='span8 offset2' style="margin-top: -24px;">
            <% if @book_detail.status? %>
              <%= link_to "Sold", "javascript:void(0);", :class => 'btn btn-success' %>
            <% else %>
              <%= link_to "Buy", buy_book_public_book_detail_path, :class => 'btn btn-primary', :method => :post %>
            <% end %>  
            <%= link_to 'Back', public_book_details_path , :class => 'btn btn-inverse' %>
          </div>
        </div>
      </div>
    </div>
    <div class="span3"></div>
  </div>
</div>
