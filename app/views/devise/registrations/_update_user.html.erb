<fieldset>
  <div class="control-group">
    <label class="control-label" for="inputError">First Name</label>
    <div class="controls">
      <%= f.text_field :first_name %>
      <span class="help-inline"><%= f.error :first_name %></span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputError">Last Name</label>
    <div class="controls">
      <%= f.text_field :last_name %>
      <span class="help-inline"><%= f.error :last_name %></span>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Email</label>
    <div class="controls">
      <%= f.text_field :email, :disabled => 'disabled', :class=>"input-large uneditable-input" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Username</label>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Address</label>
    <div class="controls">
      <%= f.text_area :address, :rows => '3' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">City</label>
    <div class="controls">
      <%= f.text_field :city %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">State</label>
    <div class="controls">
      <%= f.text_field :state %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Country</label>
    <div class="controls">
      <%= f.text_field :country %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Zipcode</label>
    <div class="controls">
      <%= f.text_field :zipcode %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Phone</label>
    <div class="controls">
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Update Profile", :class =>"btn btn-primary" %>
    <button type="reset" class="btn">Cancel</button>
  </div>
</fieldset>
